@model List<Project2WooxTravel.Entities.Admin>

@foreach (var item in Model)
{
    <li class="nav-item topbar-user dropdown hidden-caret">
        <a class="dropdown-toggle profile-pic"
           data-bs-toggle="dropdown"
           href="#"
           aria-expanded="false">
            <div class="avatar-sm">
                <img src="/kaiadmin-lite-1.2.0/assets/img/profile.jpg"
                     alt="..."
                     class="avatar-img rounded-circle" />
            </div>
            <span class="profile-username">
                <span class="op-7">Hi,  </span>
                <span class="fw-bold">@item.Name</span>
            </span>
        </a>
        <ul class="dropdown-menu dropdown-user animated fadeIn">
            <div class="dropdown-user-scroll scrollbar-outer">
            <li>

                <div class="user-box">
                    <div class="avatar-lg">
                        <img src="/kaiadmin-lite-1.2.0/assets/img/profile.jpg"
                             alt="image profile"
                             class="avatar-img rounded" />
                    </div>
                    <div class="u-text">
                        <h4>@item.Name</h4>
                        <p class="text-muted"></p>
                        <a href="/Admin/Profile/Index"
                           class="btn btn-xs btn-secondary btn-sm">View Profile</a>
                    </div>
                </div>
               

            </li>
            <li>
                <div class="dropdown-divider"></div>
                <a class="dropdown-item" href="/Admin/Profile/Index">My Profile</a>
                <a class="dropdown-item" href="#">My Card</a>
                <a class="dropdown-item" href="/Admin/Message/Inbox">Inbox</a>
                <a class="dropdown-item" href="#">Logout</a>
            </li>
    </li>
}
