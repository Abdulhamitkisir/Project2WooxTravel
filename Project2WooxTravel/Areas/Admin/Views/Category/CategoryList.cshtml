@model  List<Project2WooxTravel.Entities.Category>
@{
    ViewBag.Title = "CategoryList";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="container">
        <div class="page-inner">

            <div class="row">
                <div class="col-md-12">
                        <div class="card">
                            <div class="card-header" style="background-color: #2E8C03">
                                <div class="card-title" >Kategori Islemleri</div>
                            </div>
                            <div class="card-body">

                                <table class="table mt-3">
                                    <thead>
                                        <tr>
                                            <th scope="col">Kategori ID</th>
                                            <th scope="col">Kategori Adi</th>
                                            <th scope="col">Sil</th>
                                            <th scope="col">Güncelle</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@item.CategoryId</td>
                                                <td>@item.CategoryName</td>
                                                <td><a href="#" class="btn btn-danger">Sil</a></td>
                                                <td><a href="#" class="btn btn-success">Güncelle</a></td>
                                            </tr>

                                        }
                                        </tbody>
                                </table>
                            </div>
                        </div>


                </div>

            </div>
        </div>
    </div>

