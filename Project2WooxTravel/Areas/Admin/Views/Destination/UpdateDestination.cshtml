@model Project2WooxTravel.Entities.Destination
@{
    ViewBag.Title = "UpdateDestination";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="container">
    <div class="page-inner">

        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Destinasyon Islemleri</div>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            @Html.HiddenFor(x=> x.DestinationId, new { @class = "form-control" })
                            <label>Ülke Adi</label>
                            @Html.TextBoxFor(x => x.Country, new { @class = "form-control" })
                            <br />
                            <label>Sehir Adi</label>
                            @Html.TextBoxFor(x => x.City, new { @class = "form-control" })
                            <br />
                            <label>Tur Basligi</label>
                            @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
                            <br />
                            <label>Gün/Gece </label>
                            @Html.TextBoxFor(x => x.DayNight, new { @class = "form-control" })
                            <br />
                            <label>Kapak Görseli</label>
                            @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
                            <br />
                            <label>Tur Fiyati</label>
                            @Html.TextBoxFor(x => x.Price, new { @class = "form-control" })
                            <br />
                            <label>Aciklama</label>
                            @Html.TextAreaFor(x => x.Description, 5, 0, new { @class = "form-control" })
                            <br />
                            <button class="btn btn-primary">Tur Rotasini Güncellestir</button>
                        </form>

                    </div>
                </div>



            </div>

        </div>
    </div>
</div>

