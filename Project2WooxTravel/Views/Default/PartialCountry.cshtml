@model PagedList<Project2WooxTravel.Entities.Destination>
@using PagedList;
@using PagedList.Mvc;
<br />
<div class="visit-country" >
    <div class="container" style="background-color:aliceblue">
        <div class="row">
            <div class="col-lg-5">
                <div class="section-heading">
                    <h2 style="color:black">Our popular Tour and Travel routes</h2>
                    <a style="color:black">Accompanied by Expert Guides to All Around the World</a>
                   
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="items">
                    <div class="row">
                        @foreach (var item in Model)
                        {
                            <div class="col-lg-12">
                                <div class="item">
                                    <div class="row">
                                        <div class="col-lg-4 col-sm-5">
                                            <div class="image">
                                                <img src="@item.ImageUrl" alt="">
                                            </div>
                                        </div>
                                        <div class="col-lg-8 col-sm-7">
                                            <div class="right-content">
                                                <h4>@item.Country</h4>
                                                <span>@item.City</span>
                                                <div class="main-button">
                                                    <a href="/Default/PartialTourDetail/@item.DestinationId">Details</a>


                                                </div>
                                                @if (item.Description.Length < 100)
                                                {
                                                    <p>@item.Description</p>
                                                }
                                                else
                                                {
                                                    <p>@item.Description.Substring(0, 100)....</p>
                                                }

                                                <ul class="info">
                                                    <li><i class="fa fa-user"></i> @item.DayNight Gün - @(item.DayNight - 1) Gece</li>
                                                    <li><i class="fa fa-globe"></i> @item.Price ₺ </li>
                                                    <li><i class="fa fa-home"></i>@item.Capacity Kisi</li>
                                                </ul>
                                                
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }

                    <div class="col-lg-12 text-center">
                        <ul class="page-numbers d-flex justify-content-center">
                            @Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page }), new PagedListRenderOptions
                            {
                                LiElementClasses = new List<string> { "page-link" }
                            })
                        </ul>                     
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
